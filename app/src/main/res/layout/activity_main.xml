<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.example.circularslider.CircularSlider
        android:id="@+id/circularSlider"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerInParent="true"
        app:trackWidth="80dp"
        app:outerRingWidth="16dp"
        app:outerRingColor="#BDBDBD"
        app:trackColor="#F48FB1"
        app:progressColor="#C2185B"
        app:innerCircleColor="#FFE082"
        app:textColor="#4A148C"
        app:defaultValue="35"
        app:innerCircleRatio="0.10"/>

    <TextView
        android:id="@+id/valueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur : 35%"
        android:textColor="#1A237E"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_above="@id/circularSlider"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>
</RelativeLayout>
